    <StackLayout Margin="5">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="GoStyle" HorizontalTextAlignment="Center" TextColor="White" FontSize="36" />
        </Frame>
        <!--<Frame
            VerticalOptions="EndAndExpand"
            Margin="10,10,10,-10"
